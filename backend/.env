# backend/.env.example

# --- App ---
API_BASE=/api
CORS_ORIGINS=*

# --- Postgres ---
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/vml

# --- Mongo (queue) ---
MONGO_URI=mongodb://localhost:27017
MONGO_DB=vml
MONGO_COLLECTION=jobs

# --- Artifacts / MLflow ---
ARTIFACT_ROOT=./artifacts
MLFLOW_URI=http://localhost:5000

# --- Auth / JWT ---
JWT_SECRET=change_me_super_secret
JWT_ALG=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# --- Quotas / Concurrency ---
GLOBAL_MAX_ACTIVE_JOBS=16
USER_MAX_ACTIVE_JOBS=4
WORKER_MAX_ACTIVE_JOBS=4

# --- UI client (only if you proxy API separately) ---
# API_DIR=http://127.0.0.1:8065
